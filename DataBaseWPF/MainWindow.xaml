<Window x:Class="DataBaseWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Image Source="img/northwind.png" Stretch="Fill" Height="auto" VerticalAlignment="Top" HorizontalAlignment="Left" Width="auto" Margin="0,24,0,0"/>

        <!-- Menú -->
        <Grid x:Name="Menu" VerticalAlignment="Top">
            <Menu Background="#FF003346" Height="25" x:Name="MainMenu"/>
        </Grid>
        <!-- Contenido -->
        <Grid x:Name="Content" Margin="0,25,0,0"/>
    </Grid>
    
</Window>
